<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.chenfangming.manage.persistence.mapper.MenuMapper">

    <resultMap id="BASE_RESULT_MAP" type="com.chenfangming.manage.persistence.entity.MenuEntity">
        <id column="menu_id" property="menuId"/>
        <result column="parent_id" property="parentId"/>
        <result column="icon" property="icon"/>
        <result column="name" property="name"/>
        <result column="type" property="type"/>
        <result column="method" property="method"/>
        <result column="pattern" property="pattern"/>
        <result column="operate" property="operate"/>
        <result column="sort" property="sort"/>
        <result column="remark" property="remark"/>
        <result column="enabled" property="enabled"/>
        <result column="create_user" property="createUser"/>
        <result column="create_time" property="createTime"/>
        <result column="update_user" property="updateUser"/>
        <result column="update_time" property="updateTime"/>
    </resultMap>

    <!--  一个资源对应多个角色  -->
    <resultMap id="MENU_ROLE_RESULT_MAP" type="com.chenfangming.manage.persistence.entity.view.MenuRoleView" extends="BASE_RESULT_MAP">
        <collection property="roleEntityList" ofType="com.chenfangming.manage.persistence.entity.RoleEntity">
            <id column="role_id" property="roleId"/>
            <result column="role_name" property="name"/>
            <result column="role_remark" property="remark"/>
            <result column="role_enabled" property="enabled"/>
            <result column="role_create_user" property="createUser"/>
            <result column="role_create_time" property="createTime"/>
            <result column="role_update_user" property="updateUser"/>
            <result column="role_update_time" property="updateTime"/>
        </collection>
    </resultMap>

    <!--    <select id="selectByMenuIdList" resultMap="BASE_RESULT_MAP">-->
