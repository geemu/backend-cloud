    <!--        <foreach collection="list" open="(" separator="," close=")" item="item" index="index">-->
    <!--            #{item}-->
    <!--        </foreach>-->
    <!--        order by sort as-->
    <!--    </select>-->

    <select id="selectAllWithRole" resultMap="BASE_RESULT_MAP">
        SELECT m.*,
               r.role_id,
               r.name        AS role_name,
               r.remark      AS role_remark,
               r.enabled     AS role_enabled,
               r.create_user AS role_create_user,
               r.create_time AS role_create_time,
               r.update_user AS role_update_user,
               r.update_time AS role_update_time
        FROM (SELECT * FROM backend_menu where enabled = TRUE) m
                 INNER JOIN backend_role_menu rm ON m.menu_id = rm.menu_id
                 INNER JOIN (SELECT * FROM backend_role WHERE enabled = TRUE) r ON r.role_id = rm.role_id
        ORDER BY m.sort ASC
    </select>

    <select id="selectByRoleIdList" resultMap="BASE_RESULT_MAP" parameterType="java.util.List">
        SELECT m.*
        FROM (SELECT * FROM backend_menu WHERE enabled = TRUE) m
        INNER JOIN (select * from backend_role_menu
        WHERE
        role_id IN
        <foreach collection="roleIdList" index="index" open="(" separator="," close=")" item="roleId">
            #{roleId}
        </foreach>) rm
        ON m.menu_id = rm.menu_id
    </select>

</mapper>
