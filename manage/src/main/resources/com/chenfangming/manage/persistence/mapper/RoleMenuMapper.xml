<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.chenfangming.manage.persistence.mapper.RoleMenuMapper">

    <resultMap id="MENU_ROLE_RESULT_MAP" type="com.chenfangming.manage.persistence.entity.view.MenuRoleView"
               extends="com.chenfangming.manage.persistence.mapper.MenuMapper.MENU_RESULT_MAP">
        <collection property="roleEntityList" ofType="com.chenfangming.manage.persistence.entity.RoleEntity">
            <id column="role_id" property="id"/>
            <result column="role_name" property="name"/>
            <result column="role_enabled" property="enabled"/>
            <result column="role_create_user" property="createUser"/>
            <result column="role_create_time" property="createTime"/>
            <result column="role_update_user" property="updateUser"/>
            <result column="role_update_time" property="updateTime"/>
        </collection>
    </resultMap>

    <select id="selectAllMenuRole" resultMap="MENU_ROLE_RESULT_MAP">
        SELECT m.id,
               m.pid,
               m.name,
               m.path,
               m.method,
               r.id   AS role_id,
               r.name AS role_name
        FROM backend_menu m
                 INNER JOIN backend_role_menu rm ON m.id = rm.menu_id
                 INNER JOIN backend_role r ON r.id = rm.role_id
        WHERE r.enabled = TRUE
          AND rm.enabled = TRUE
        ORDER BY m.sort ASC
    </select>

</mapper>
